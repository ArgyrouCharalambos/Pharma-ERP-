    <script>
        // Tab switching functionality
        document.getElementById('dailyBtn').addEventListener('click', function() {
            switchTab('daily');
        });
        
        document.getElementById('weeklyBtn').addEventListener('click', function() {
            switchTab('weekly');
        });
        
        document.getElementById('monthlyBtn').addEventListener('click', function() {
            switchTab('monthly');
        });
        
        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(`${tabName}Content`).classList.add('active');
            
            // Update active button
            document.querySelectorAll('.time-period-btn').forEach(btn => {
                btn.classList.remove('bg-primary', 'text-white');
                btn.classList.add('bg-light', 'text-primary');
            });
            
            document.getElementById(`${tabName}Btn`).classList.remove('bg-light', 'text-primary');
            document.getElementById(`${tabName}Btn`).classList.add('bg-primary', 'text-white');
        }
        
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Hourly Chart (Daily Report)
            const hourlyCtx = document.getElementById('hourlyChart').getContext('2d');
            const hourlyChart = new Chart(hourlyCtx, {
                type: 'bar',
                data: {
                    labels: ['0h','1h','2h','3h','5h','6h','7h','8h','9h', '10h', '11h', '12h', '13h', '14h', '15h', '16h', '17h', '18h','19h','20h','21h','22h','23h'],
                    datasets: [{
                        label: "Vente D'aujourd'hui (Fc)",
                        data: [{{ salesByHour.join(',') }}],
                        backgroundColor: '#3b82f6',
                        borderColor: '#1e40af',
                        borderWidth: 1
                    },
                    {
                        label: "Vente D'hier (Fc)",
                        data: [{{ salesByHourHier.join(',') }}],
                        backgroundColor: '#dbeafe',
                        borderDash: [5, 5],
                        borderColor: '#3b82f6',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            },
                            ticks: {
                                callback: function(value) {
                                    return  value.toLocaleString('fr-FR') + 'Fc';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            // Weekly Chart (Weekly Report)
            const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
            const weeklyChart = new Chart(weeklyCtx, {
                type: 'line',
                data: {
                    labels: ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'],
                    datasets: [
                        {
                            label: 'Cette semaine',
                            data: [{{ currentWeekSales.join(',') }}],
                            borderColor: '#1e40af',
                            backgroundColor: 'rgba(30, 64, 175, 0.05)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Semaine dernière',
                            data: [{{ lastWeekSales.join(',') }}],
                            borderColor: '#60a5fa',
                            borderDash: [5, 5],
                            tension: 0.3,
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            },
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('fr-FR') + 'Fc';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            // Monthly Chart (Monthly Report)
            const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
            const monthlyChart = new Chart(monthlyCtx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Août', 'Sep', 'Oct', 'Nov', 'Déc'],
                    datasets: [{
                        label: 'Chiffre d\'affaires (Fc)',
                        data:  [{{ salesByMonth.join(',') }}],
                        backgroundColor: [
                            '#3b82f6', '#3b82f6', '#3b82f6', '#3b82f6', '#3b82f6', '#1e40af', 
                            '#dbeafe', '#dbeafe', '#dbeafe', '#dbeafe', '#dbeafe', '#dbeafe'
                        ],
                        borderColor: '#1e40af',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            },
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('fr-FR') + 'Fc' ;
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            // Set current date
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.querySelectorAll('#dateDisplay').forEach(e => {
              e.textContent = now.toLocaleDateString('fr-FR', options);
            }); 
        });
    </script>
